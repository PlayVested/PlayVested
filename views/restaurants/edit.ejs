<% include ../partials/header %>

    <div style="text-align:center">
        <h1>Edit restaurant</h1>
    </div>

    <div class="new-item-form">
        <form class="form-inline" action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="restaurant[name]" placeholder="Restaurant name" value="<%= restaurant.name %>" autofocus>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="restaurant[website]" placeholder="Website" value="<%= restaurant.website %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="restaurant[phone]" placeholder="phone" value="<%= restaurant.phone %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="restaurant[description]" placeholder="Description" value="<%= restaurant.description %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="restaurant[address]" placeholder="Address" value="<%= restaurant.location.address %>">
            </div>

            <% include ../partials/formButtons %>
        </form>
    </div>

<% include ../partials/footer %>