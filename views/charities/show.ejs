<% include ../partials/header %>

    <a href="/charities">Back</a>
    <div>
        <div class="page-header">
            <h2>
                Company Name: <%= charity.organizationName %>
            </h2>
            <h2>
                Phone Number: <%= charity.phoneNumber %>
            </h2>
            <h2>
                Address: <%= charity.address %>
            </h2>
            <h2>
                City: <%= charity.city %>
            </h2>
            <h2>
                State: <%= charity.state %>
            </h2>
            <h2>
                Zipcode: <%= charity.zipcode %>
            </h2>
            <h2>
                Tax ID: <%= charity.taxID %>
            </h2>
        </div>
        <% if (isOwner) { %>
            <div class="item-action">
                <form class="delete-item" action="/charities/<%= charity._id %>?_method=DELETE" method="POST"
                    onsubmit="return confirm(`Are you sure you want to delete this charity?`)">
                    <button class="w3-button w3-red">Delete</button>
                </form>
            </div>
            <div class="item-action">
                <a href="/charities/<%= charity._id %>/edit" class="w3-button w3-yellow">Edit</a>
            </div>
        <% } %>
    </div>
    <div>
        <% if (isOwner) { %>
            <br>

            <div class="row row-header">
                <div class="col-sm-10">
                    <h2 class="page-header">Owners:</h2>
                </div>
                <div class="col add-friend">
                    <a href="/invitations/charity/<%= charity._id %>" class="w3-button w3-green">+</a>
                </div>
            </div>
            <br>
            <% charity.ownerID.forEach((owner) => { %>
                <div class="row row-content">
                    <div class="col-sm-5">
                        <strong>
                            <%= owner.getDisplayName() %>
                        </strong>
                    </div>
                    <div class="col-sm-5">
                        <strong>
                            <%= owner.username %>
                        </strong>
                    </div>
                    <div class="col-sm-2">
                        <% if (charity.ownerID.length > 1) { %>
                            <form class="delete-item" action="/charities/<%= charity._id %>/owner/<%= owner._id %>?_method=DELETE" method="POST"
                                onsubmit="return confirm('Are you sure you want to remove <%= owner.getDisplayName() %> as an owner?');">
                                <button type="submit" class="w3-button w3-red"><i class="fa fa-trash w3-small"></i></button>
                            </form>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>

<% include ../partials/footer %>
