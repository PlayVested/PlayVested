<% include ../partials/header %>

    <div style="text-align:center">
        <h1>Edit Charity</h1>
    </div>

    <div class="new-item-form">
        <form class="form-inline" name="editForm" action="/charities/<%= charity._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="charity[name]" placeholder="Organization Name" value="<%= charity.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="charity[phoneNumber]" placeholder="Phone Number" value="<%= charity.phoneNumber %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="charity[address]" placeholder="Address" value="<%= charity.address %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="charity[city]" placeholder="City" value="<%= charity.city %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="charity[state]" placeholder="State" value="<%= charity.state %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="charity[zipcode]" placeholder="Zipcode" value="<%= charity.zipcode %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="charity[taxID]" placeholder="Tax ID" value="<%= charity.taxID %>">
            </div>

            <% include ../partials/formButtons %>
        </form>
    </div>

<% include ../partials/footer %>