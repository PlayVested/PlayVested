<% include ../partials/header %>

    <h1>This is the charity index page</h1>

    <div class="row">
        <div class="col-lg-6">
            <ul>
            <% charities.forEach((charity) => { %>
                <li>
                    <a href="/charities/<%= charity._id %>">
                        <%= charity.name %>
                    </a>
                </li>
            <% }); %>
            </ul>

            <% if (user) { %>
                <a href="/charities/new" class="w3-button w3-large w3-blue">Add Charity</a>
            <% } %>
        </div>
    </div>

<% include ../partials/footer %>
