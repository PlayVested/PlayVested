<% include ./partials/header %>

    <h2>Gaming for Good</h2> 

    <br>
    <a class="btn btn-block btn-primary" href="/developers">Developers</a></li>
    <a class="btn btn-block btn-primary" href="/charities">Charities</a></li>
    <% if (user) { %>
        <a class="btn btn-block btn-primary" href="/users/<%= user._id %>">Account Info</a>
        <br>
        <% files.forEach((file) => { %>
            <div class="mb-4">
                <a href="<%= file.filename %>" class="btn btn-secondary mr-2">Download</a>
                <%= file.desc %>
                [ Last Updated: <%= file.date %> ]
            </div>
        <% }); %>
    <% } %>

<% include ./partials/footer %>