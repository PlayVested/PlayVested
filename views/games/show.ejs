<% include ../partials/header %>

    <a href="/developers/<%= game.devID %>/games">Back</a>
    <div>
        <div class="page-header">
            <% if (isOwner) { %>
            <h2>
                ID: <%= game._id %>
            </h2>
            <% } %>
            <h2>
                Name: <%= game.name %>
            </h2>
            <h2>
                Developer: <%= developer.companyName %>
            </h2>
        </div>
        <% if (isOwner) { %>
            <div class="item-action">
                <form class="delete-item" action="/games/<%= game._id %>?_method=DELETE" method="POST"
                    onsubmit="return confirm(`Are you sure you want to delete this game?`)">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="item-action">
                <a href="/games/<%= game._id %>/edit" class="btn btn-warning">Edit</a>
            </div>

            <div class="row">
                <div class="col">
                    <h2 class="page-header">Records</h2>
                </div>
            </div>
            <div class="container">
                <% records.forEach((record) => { %>
                <div class="row">
                    <div class="col">
                        <%= new Date(record.createdAt).toDateString() %>
                    </div>
                    <div class="col">
                        <%= record.playerID %>
                    </div>
                    <div class="col">
                        $
                        <%= record.amountEarned %>
                    </div>
                    <div class="col">
                        <form class="delete-item" action="/records/<%= record._id %>?_method=DELETE" method="POST"
                            onsubmit="return confirm(`Are you sure you want to delete this record?`)">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% }); %>
            </div>
        <% } %>
    </div>

<% include ../partials/footer %>
