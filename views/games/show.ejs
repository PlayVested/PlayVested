<% include ../partials/header %>

    <a href="/developers/<%= game.devID %>/games">Back</a>
    <script>
        function deleteConfirm() {
            return confirm(`Are you sure you want to delete this game?`);
        }
    </script>

    <div>
        <div class="page-header">
            <h2>
                Name: <%= game.name %>
            </h2>
            <h2>
                Developer: <%= developer.companyName %>
            </h2>
        </div>
        <div class="item-action">
            <form class="delete-item" action="/games/<%= game._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
        <div class="item-action">
            <a href="/games/<%= game._id %>/edit" class="btn btn-warning">Edit</a>
        </div>
    </div>

<% include ../partials/footer %>
