<% include ../partials/header %>

    <div style="text-align:center">
        <h1>Edit Game</h1>
    </div>

    <div class="new-item-form">
        <form class="form-inline" name="editForm" action="/games/<%= game._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="game[companyName]" placeholder="Company Name" value="<%= game.companyName %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="game[phoneNumber]" placeholder="Phone Number" value="<%= game.phoneNumber %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="game[address]" placeholder="Address" value="<%= game.address %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="game[city]" placeholder="City" value="<%= game.city %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="game[state]" placeholder="State" value="<%= game.state %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="game[zipcode]" placeholder="Zipcode" value="<%= game.zipcode %>">
            </div>

            <% include ../partials/formButtons %>
        </form>
    </div>

<% include ../partials/footer %>