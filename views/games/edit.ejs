<% include ../partials/header %>

    <div style="text-align:center">
        <h1>Edit Game</h1>
    </div>

    <div class="new-item-form">
        <form class="form-inline" name="editForm" action="/games/<%= game._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="game[name]" placeholder="Game Name" value="<%= game.name %>">
            </div>
            <div class="form-group">
                <select class="form-control" name="game[devID]">
                    <% developers.forEach((dev) => { %>
                        <option value="<%= dev._id %>" <%- dev._id.equals(game.devID) ? "selected" : "" %>>
                            <%= dev.name %>
                        </option>
                    <% }); %>
                </select>
            </div>

            <% include ../partials/formButtons %>
        </form>
    </div>

<% include ../partials/footer %>