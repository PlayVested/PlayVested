<% include ../partials/header %>

    <a href="/developers/<%= developer._id %>">Back</a>
    <h1>This is the game index page for <%= developer.name %></h1>

    <div class="row">
        <div class="col-lg-6">
            <ul>
            <% games.forEach((game) => { %>
                <li>
                    <a href="/games/<%= game._id %>">
                        <%= game.name %>
                    </a>
                </li>
            <% }); %>
            </ul>

            <% if (user) { %>
                <a href="/games/new?developerID=<%= developer._id %>" class="w3-button w3-large w3-blue">Add Game</a>
            <% } %>
        </div>
    </div>

<% include ../partials/footer %>
