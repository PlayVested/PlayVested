<% include ../partials/header %>

    <div style="text-align:center">
        <h1>Edit a rating</h1>
    </div>

    <div class="new-item-form">
        <form action="<%= restaurantRoute %><%= menuItemRoute %>/ratings/<%= rating._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="number" min="0" max="5" step="0.1" name="rating[rating]" placeholder="Rating" value="<%= rating.rating %>" autofocus>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="rating[comment]" placeholder="Comment" value="<%= rating.comment %>">
            </div>

            <% include ../partials/formButtons %>
        </form>
    </div>

<% include ../partials/footer %>