<% include ../partials/header %>

    <div style="text-align:center">
        <h1>Add a rating</h1>
    </div>

    <div class="new-item-form">
        <form class="form-inline" action="<%= restaurantRoute %><%= menuItemRoute %>/ratings" method="POST">
            <div class="form-group">
                <input class="form-control" type="number" min="0" max="5" step="0.1" name="rating" placeholder="Rating" autofocus>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment" placeholder="Comment">
            </div>

            <% include ../partials/formButtons %>
        </form>
    </div>

<% include ../partials/footer %>