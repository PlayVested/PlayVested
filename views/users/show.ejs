<% include ../partials/header %>

    <a href="/">Back</a>
    <script>
        function deleteConfirm() {
            return confirm(`Are you sure you want to delete this friend?`);
        }
    </script>

    <div>
        <div class="page-header">
            <h2>
                First Name: <%= user.firstName %>
            </h2>
            <h2>
                Last Name: <%= user.lastName %>
            </h2>
            <h2>
                Email: <%= user.email %>
            </h2>
        </div>
        <div class="item-action">
            <form class="delete-item" action="/users/<%= user._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
        <div class="item-action">
            <a href="/users/<%= user._id %>/edit" class="btn btn-warning">Edit</a>
        </div>
    
        <div class="row">
            <div class="col">
                <h2 class="page-header">Friends</h2>
            </div>
            <div class="col">
                <a href="/users/<%= user._id %>/friends/new" class="btn btn-primary">Add Friend</a>
            </div>
        </div>
        <div class="container">
            <% user.friends.forEach((friend) => { %>
                <div class="row">
                    <div class="col">
                        <a href="/users/<%= user._id %>/friends/<%= friend._id %>">
                            <%= friend.getDisplayName() %>
                        </a>
                    </div>
                    <div class="col">
                            <form class="delete-item" action="/users/<%= user._id %>/friends/<%= friend._id %>?_method=DELETE" method="POST" onsubmit="return deleteConfirm()">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

<% include ../partials/footer %>
